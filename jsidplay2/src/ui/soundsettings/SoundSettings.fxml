<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.ToggleGroup?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.TilePane?>
<?import javafx.scene.control.Button?>
<?import javafx.collections.FXCollections?> 
<?import java.lang.String?>
<?import java.lang.Integer?>
<?import resid_builder.resid.ISIDDefs.SamplingMethod?>

<Scene xmlns:fx="http://javafx.com/fxml">
	<VBox>
		<TitledPane collapsible="false" text="%TIMER">
			<GridPane>
				<Label text="%DEFAULT_LENGTH" GridPane.columnIndex="0"
					GridPane.rowIndex="0">
				</Label>
				<TextField GridPane.columnIndex="1" GridPane.rowIndex="0"
					fx:id="defaultTime" onAction="#setDefaultTime">
					<tooltip>
						<Tooltip text="%DEFAULT_LENGTH_TIP"></Tooltip>
					</tooltip>
				</TextField>
				<CheckBox text="%RESPECT_SONG_LENGTH" GridPane.columnIndex="0"
					GridPane.rowIndex="1" fx:id="enableSldb" onAction="#doEnableSldb">
				</CheckBox>
				<CheckBox text="%SINGLE_SONG" GridPane.columnIndex="1"
					GridPane.rowIndex="1" fx:id="singleSong" onAction="#playSingleSong">
				</CheckBox>
			</GridPane>
		</TitledPane>
		<TitledPane collapsible="false" text="%OUTPUT_DEVICE">
			<GridPane>
				<Label text="%DEVICE" GridPane.columnIndex="0"
					GridPane.rowIndex="0">
				</Label>
				<ComboBox GridPane.columnIndex="1" GridPane.rowIndex="0"
					fx:id="soundDevice" onAction="#setSoundDevice">
				</ComboBox>
				<FlowPane alignment="CENTER_LEFT" GridPane.columnIndex="2"
					GridPane.rowIndex="0">
					<Label text="%6581" />
					<ComboBox fx:id="hardsid6581" onAction="#setSid6581">
						<items>
							<FXCollections fx:factory="observableArrayList">
								<!-- Put in enough devices for: 4 HardSID PCI cards + 4 HardSID USB 
									chips + 8 Network SID Devices -->
								<Integer fx:value="1" />
								<Integer fx:value="2" />
								<Integer fx:value="3" />
								<Integer fx:value="4" />
								<Integer fx:value="5" />
								<Integer fx:value="6" />
								<Integer fx:value="7" />
								<Integer fx:value="8" />
								<Integer fx:value="9" />
								<Integer fx:value="10" />
								<Integer fx:value="11" />
								<Integer fx:value="12" />
								<Integer fx:value="13" />
								<Integer fx:value="14" />
								<Integer fx:value="15" />
								<Integer fx:value="16" />
							</FXCollections>
						</items>
					</ComboBox>
					<Label text="%8580" />
					<ComboBox fx:id="hardsid8580" onAction="#setSid8580">
						<items>
							<FXCollections fx:factory="observableArrayList">
								<!-- Put in enough devices for: 4 HardSID PCI cards + 4 HardSID USB 
									chips + 8 Network SID Devices -->
								<Integer fx:value="1" />
								<Integer fx:value="2" />
								<Integer fx:value="3" />
								<Integer fx:value="4" />
								<Integer fx:value="5" />
								<Integer fx:value="6" />
								<Integer fx:value="7" />
								<Integer fx:value="8" />
								<Integer fx:value="9" />
								<Integer fx:value="10" />
								<Integer fx:value="11" />
								<Integer fx:value="12" />
								<Integer fx:value="13" />
								<Integer fx:value="14" />
								<Integer fx:value="15" />
								<Integer fx:value="16" />
							</FXCollections>
						</items>
					</ComboBox>
				</FlowPane>
				<Label text="%SAMPLING_RATE" GridPane.columnIndex="0"
					GridPane.rowIndex="1">
				</Label>
				<ComboBox GridPane.columnIndex="1" GridPane.rowIndex="1"
					fx:id="samplingRate" onAction="#setSamplingRate">
					<items>
						<FXCollections fx:factory="observableArrayList">
							<Integer fx:value="44100" />
							<Integer fx:value="48000" />
							<Integer fx:value="96000" />
						</FXCollections>
					</items>
				</ComboBox>
				<Label text="%SAMPLING" GridPane.columnIndex="0"
					GridPane.rowIndex="2">
				</Label>
				<ComboBox GridPane.columnIndex="1" GridPane.rowIndex="2"
					fx:id="samplingMethod" onAction="#setSamplingMethod">
				</ComboBox>
				<HBox GridPane.columnIndex="0" GridPane.rowIndex="3">
					<fx:define>
						<ToggleGroup fx:id="playSourceGroup" />
					</fx:define>
					<children>
						<RadioButton text="%EMU" fx:id="playEmulation"
							onAction="#playEmulatedSound" toggleGroup="$playSourceGroup" />
						<RadioButton text="%RECORDING" fx:id="playMP3"
							onAction="#playRecordedSound" toggleGroup="$playSourceGroup" />
					</children>
				</HBox>
				<TextField editable="false" GridPane.columnIndex="1"
					GridPane.rowIndex="3" fx:id="mp3" onAction="#setRecording">
				</TextField>
				<Button fx:id="mp3Browse" text="%BROWSE"
					GridPane.columnIndex="2" GridPane.rowIndex="3" onAction="#doBrowse">
					<graphic>
						<ImageView>
							<image>
								<Image url="@/ui/icons/browse.png" />
							</image>
						</ImageView>
					</graphic>
				</Button>
			</GridPane>
		</TitledPane>
		<TitledPane collapsible="false" text="%SOASC">
			<GridPane>
				<CheckBox text="%ENABLE_PROXY" GridPane.columnIndex="0"
					GridPane.rowIndex="0" GridPane.columnSpan="3" fx:id="proxyEnable"
					onAction="#setEnableProxy">
				</CheckBox>
				<Label text="%HOSTNAME_AND_PORT" GridPane.columnIndex="0"
					GridPane.rowIndex="1">
				</Label>
				<TextField GridPane.columnIndex="1" GridPane.rowIndex="1"
					fx:id="proxyHost" onAction="#setProxyHost">
				</TextField>
				<TextField text="80" GridPane.columnIndex="2"
					GridPane.rowIndex="1" fx:id="proxyPort" onAction="#setProxyPort">
				</TextField>

				<Label text="%DOWNLOAD_URL_R2" GridPane.columnIndex="0"
					GridPane.rowIndex="2">
				</Label>
				<TextField GridPane.columnIndex="1" GridPane.rowIndex="2"
					fx:id="dwnlUrl6581R2" onAction="#setDownloadUrl6581R2">
				</TextField>
				<Button text="%DOWNLOAD_R2" GridPane.columnIndex="2"
					GridPane.rowIndex="2" fx:id="download6581R2Btn" onAction="#startDownload6581R2">
				</Button>

				<Label text="%DOWNLOAD_URL_R4" GridPane.columnIndex="0"
					GridPane.rowIndex="3">
				</Label>
				<TextField GridPane.columnIndex="1" GridPane.rowIndex="3"
					fx:id="dwnlUrl6581R4" onAction="#setDownloadUrl6581R4">
				</TextField>
				<Button text="%DOWNLOAD_R4" GridPane.columnIndex="2"
					GridPane.rowIndex="3" fx:id="download6581R4Btn" onAction="#startDownload6581R4">
				</Button>

				<Label text="%DOWNLOAD_URL_R5" GridPane.columnIndex="0"
					GridPane.rowIndex="4">
				</Label>
				<TextField GridPane.columnIndex="1" GridPane.rowIndex="4"
					fx:id="dwnlUrl8580R5" onAction="#setDownloadUrl8580R5">
				</TextField>
				<Button text="%DOWNLOAD_R5" GridPane.columnIndex="2"
					GridPane.rowIndex="4" fx:id="download8580R5Btn" onAction="#startDownload8580R5">
				</Button>
			</GridPane>
		</TitledPane>
		<TitledPane collapsible="false" text="%INFOS">
			<Label text="%PLAYER" GridPane.columnIndex="0"
				GridPane.rowIndex="2">
			</Label>
			<Label GridPane.columnIndex="1" GridPane.rowIndex="2" fx:id="playerId">
			</Label>
			<Label text="%SONG_SPEED" GridPane.columnIndex="2"
				GridPane.rowIndex="2">
			</Label>
			<Label GridPane.columnIndex="3" GridPane.rowIndex="2" fx:id="tuneSpeed">
			</Label>
		</TitledPane>
	</VBox>
</Scene>
