<!-- http://www.swixml.org - Swing UI XML based -->
<!-- Sound settings dialogue -->
<dialog size="600, 640" bundle="applet.soundsettings.SoundSettingsTexts"
	title="SOUND_SETTINGS" defaultCloseOperation="JFrame.DISPOSE_ON_CLOSE"
	IconImage="ICON" Visible="true">
	<vbox>
		<panel border="TitledBorder(TIMER)" layout="GridBagLayout">
			<label text="DEFAULT_LENGTH" column="5">
				<gridbagconstraints weightx="1" weighty="1"
					fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST"
					gridx="0" gridy="2" />
			</label>
			<textfield ToolTipText="DEFAULT_LENGTH_TIP" id="defaultTime">
				<gridbagconstraints weightx="1" weighty="1"
					fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST"
					gridx="1" gridy="2" />
			</textfield>

			<checkbox label="RESPECT_SONG_LENGTH" id="enableSldb"
				action="doEnableSldb">
				<gridbagconstraints weightx="1" weighty="1"
					fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST"
					gridx="0" gridy="3" />
			</checkbox>
			<checkbox label="SINGLE_SONG" id="singleSong" action="playSingleSong">
				<gridbagconstraints weightx="1" weighty="1"
					fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST"
					gridx="1" gridy="3" />
			</checkbox>
		</panel>
		<panel border="TitledBorder(OUTPUT_DEVICE)" layout="GridBagLayout">
			<label text="DEVICE">
				<gridbagconstraints weightx="1" weighty="1"
					fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST"
					gridx="0" gridy="0" />
			</label>
			<combobox id="soundDevice" action="setSoundDevice">
				<gridbagconstraints weightx="1" weighty="1"
					fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST"
					gridx="1" gridy="0" />
			</combobox>
			<panel layout="FlowLayout" constraints="FlowLayout.LEFT">
				<gridbagconstraints weightx="1" weighty="1"
					fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST"
					gridx="2" gridy="0">
				</gridbagconstraints>
				<label text="6581" />
				<combobox id="hardsid6581" action="setSid6581" />
				<label text="8580" />
				<combobox id="hardsid8580" action="setSid8580" />
			</panel>

			<label text="SAMPLING_RATE">
				<gridbagconstraints weightx="1" weighty="1"
					fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST"
					gridx="0" gridy="1" />
			</label>
			<combobox id="samplingRate" action="setSamplingRate">
				<gridbagconstraints weightx="1" weighty="1"
					fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST"
					gridx="1" gridy="1" />
			</combobox>

			<label text="SAMPLING">
				<gridbagconstraints weightx="1" weighty="1"
					fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST"
					gridx="0" gridy="2" />
			</label>
			<combobox id="samplingMethod" action="setSamplingMethod">
				<gridbagconstraints weightx="1" weighty="1"
					fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST"
					gridx="1" gridy="2" />
			</combobox>

			<hbox>
				<gridbagconstraints weightx="1" weighty="1"
					fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST"
					gridx="0" gridy="3" />
				<buttongroup>
					<radiobutton label="EMU" id="playEmulation" action="playEmulatedSound" />
					<radiobutton label="RECORDING" id="playMP3" action="playRecordedSound" />
				</buttongroup>
			</hbox>
			<textfield editable="false" id="mp3" action="setRecording">
				<gridbagconstraints weightx="1" weighty="1"
					fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST"
					gridx="1" gridy="3" />
			</textfield>
			<button id="mp3Browse" text="BROWSE" icon="applet/icons/browse.png"
				action="doBrowse">
				<gridbagconstraints weightx="1" weighty="1"
					fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST"
					gridx="2" gridy="3" />
			</button>
		</panel>
		<panel border="TitledBorder(SOASC" layout="GridBagLayout">
			<checkbox label="ENABLE_PROXY" id="proxyEnable" action="setEnableProxy">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weighty="1" gridwidth="3" gridx="0" gridy="0" />
			</checkbox>

			<label text="HOSTNAME_AND_PORT">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weighty="1" gridwidth="1" gridx="0" gridy="1" />
			</label>
			<textfield columns="20" id="proxyHost" action="setProxyHost">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weighty="1" gridwidth="1" gridx="1" gridy="1" />
			</textfield>
			<textfield columns="5" text="80" id="proxyPort" action="setProxyPort">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weighty="1" gridwidth="1" gridx="2" gridy="1" />
			</textfield>

			<label text="DOWNLOAD_URL_R2">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1" weighty="1" gridwidth="1" gridx="0" gridy="2" />
			</label>
			<textfield columns="80" id="dwnlUrl6581R2" action="download6581R2">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="8" weighty="1" gridwidth="1" gridx="1" gridy="2" />
			</textfield>
			<button text="DOWNLOAD_R2" id="download6581R2Btn" action="startDownload6581R2">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1" weighty="1" gridwidth="1" gridx="2" gridy="2" />
			</button>

			<label text="DOWNLOAD_URL_R4">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1" weighty="1" gridwidth="1" gridx="0" gridy="3" />
			</label>
			<textfield columns="80" id="dwnlUrl6581R4" action="download6581R4">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="8" weighty="1" gridwidth="1" gridx="1" gridy="3" />
			</textfield>
			<button text="DOWNLOAD_R4" id="download6581R4Btn" action="startDownload6581R4">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1" weighty="1" gridwidth="1" gridx="2" gridy="3" />
			</button>

			<label text="DOWNLOAD_URL_R5">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1" weighty="1" gridwidth="1" gridx="0" gridy="4" />
			</label>
			<textfield columns="80" id="dwnlUrl8580R5" action="download8580R5">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="8" weighty="1" gridwidth="1" gridx="1" gridy="4" />
			</textfield>
			<button text="DOWNLOAD_R5" id="download8580R5Btn" action="startDownload8580R5">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1" weighty="1" gridwidth="1" gridx="2" gridy="4" />
			</button>
		</panel>
		<panel border="TitledBorder(OPTIONS)" layout="GridBagLayout">
			<label text="TMP_DIR">
				<gridbagconstraints weightx="1" weighty="1"
					fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST"
					gridx="0" gridy="0" />
			</label>
			<textfield editable="false" id="tmpdir" action="doSetTmpDir">
				<gridbagconstraints weightx="1" weighty="1"
					fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST"
					gridx="1" gridy="0" gridwidth="2" />
			</textfield>
			<button id="tmpdirBrowse" text="BROWSE" icon="applet/icons/browse.png"
				action="doSetTmpDir">
				<gridbagconstraints weightx="1" weighty="1"
					fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST"
					gridx="3" gridy="0" />
			</button>

			<label text="PLAYER">
				<gridbagconstraints weightx="1" weighty="1"
					fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST"
					gridx="0" gridy="2" />
			</label>
			<label id="playerId">
				<gridbagconstraints weightx="1" weighty="1"
					fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST"
					gridx="1" gridy="2" />
			</label>
			<label text="SONG_SPEED">
				<gridbagconstraints weightx="1" weighty="1"
					fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST"
					gridx="2" gridy="2" />
			</label>
			<label id="tuneSpeed">
				<gridbagconstraints weightx="1" weighty="1"
					fill="GridBagConstraints.HORIZONTAL" anchor="GridBagConstraints.WEST"
					gridx="3" gridy="2" />
			</label>
		</panel>
	</vbox>
</dialog>