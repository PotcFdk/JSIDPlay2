<!-- http://www.swixml.org - Swing UI XML based -->
<!-- Favorites -->
<panel xmlns="http://www.swixml.org/2007/Swixml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.swixml.org/2007/Swixml http://kenchis.t15.org/jsidplay2//swixml2-schema-2.6-SNAPSHOT.xsd"
	layout="GridLayout" bundle="applet.favorites.FavoritesViewTexts">
	<vbox>
		<label text="HINT" font="Georgia-ITALIC-12" constraints="BorderLayout.NORTH" />
		<panel layout="BorderLayout">
			<panel layout="GridLayout(1,1)" id="photograph" constraints="BorderLayout.WEST">
				<picture id="picture" />
			</panel>
			<vbox constraints="BorderLayout.CENTER">
				<hbox>
					<button text="ADD" id="add" icon="applet/icons/add.png"
						action="addFavorites" />
					<button text="REMOVE" enabled="false" icon="applet/icons/remove.png"
						id="remove" action="removeFavorites" />
					<button text="SELECT_ALL" id="selectAll" icon="applet/icons/selectall.png"
						action="selectAllFavorites" />
					<button text="DESELECT_ALL" id="deselectAll"
						icon="applet/icons/deselectall.png" action="deselectAllFavorites" />
				</hbox>
				<hbox>
					<button text="LOAD" id="load" icon="applet/icons/load.png"
						action="loadFavorites" />
					<button text="SAVEAS" id="saveAs" icon="applet/icons/save.png"
						action="saveFavoritesAs" />
				</hbox>
			</vbox>
		</panel>
		<tabbedpane titles="" tabLayoutPolicy="WRAP_TAB_LAYOUT" id="favoriteList"
			border="TitledBorder(PLAYLISTS)">
			<label text="HINT_PLAYLISTS" />
		</tabbedpane>
		<panel layout="GridBagLayout" border="TitledBorder(PLAYBACK_OPTIONS)">
			<label text="PLAYBACK_HINT" font="Georgia-ITALIC-12"
				foreground="BLUE">
				<gridbagconstraints gridx="0" gridy="0"
					gridwidth="4" gridheight="1" fill="GridBagConstraints.BOTH" />
			</label>
			<buttongroup>
				<radiobutton label="OFF" selected="true" action="enablePlayback"
					id="off">
					<gridbagconstraints gridx="0" gridy="1" weightx="1"
						weighty="1" fill="GridBagConstraints.BOTH" />
				</radiobutton>
				<radiobutton label="NORMAL" action="enablePlayback" id="normal">
					<gridbagconstraints gridx="1" gridy="1" weightx="1"
						weighty="1" fill="GridBagConstraints.BOTH" />
				</radiobutton>
				<radiobutton label="RANDOM_ONE_PLAYLIST" action="enablePlayback"
					id="randomOne">
					<gridbagconstraints gridx="2" gridy="1" weightx="1"
						weighty="1" fill="GridBagConstraints.BOTH" />
				</radiobutton>
				<radiobutton label="RANDOM_ALL_PLAYLISTS" action="enablePlayback"
					id="randomAll">
					<gridbagconstraints gridx="3" gridy="1" weightx="1"
						weighty="1" fill="GridBagConstraints.BOTH" />
				</radiobutton>
			</buttongroup>
			<buttongroup>
				<radiobutton label="REPEAT_OFF" selected="true" id="repeatOff"
					action="enableRepeat">
					<gridbagconstraints gridx="0" gridy="2" weightx="1"
						weighty="1" fill="GridBagConstraints.BOTH" />
				</radiobutton>
				<radiobutton label="REPEAT_ONE_TUNE" id="repeatOne"
					action="enableRepeat">
					<gridbagconstraints gridx="1" gridy="2" weightx="1"
						weighty="1" fill="GridBagConstraints.BOTH" />
				</radiobutton>
			</buttongroup>
		</panel>
	</vbox>
</panel>
