<!-- http://www.swixml.org - Swing UI XML based -->
<!-- Video Screen -->
<panel layout="BorderLayout" bundle="applet.videoscreen.VideoScreenTexts"
	focusable="true">
	<splitpane ResizeWeight="1" orientation="VERTICAL"
		constraints="BorderLayout.CENTER" id="splitpane">
		<C64Canvas id="c64" />
		<panel layout="GridLayout(4,1)">
			<NiceButton id="virtualKeyboard" action="showVirtualKeyboard" icon="applet/icons/keyboard.png" />
			<NiceButton id="datasette" action="insertTape"></NiceButton>
			<NiceButton name="Floppy" id="floppy" action="insertDisk"></NiceButton>
			<NiceButton id="cartridge" action="insertCartridge"></NiceButton>
		</panel>
	</splitpane>
	<panel layout="GridLayout(1,10)" constraints="BorderLayout.SOUTH">
		<dknob label="BRIGHTNESS" intervalLow="-100" intervalHigh="100"
			divisor="100" focusableDKnob="false" id="brightness" />
		<dknob label="CONTRAST" intervalLow="0" intervalHigh="200"
			divisor="100" focusableDKnob="false" id="contrast" />
		<dknob label="GAMMA" intervalLow="180" intervalHigh="250"
			divisor="100" focusableDKnob="false" id="gamma" />
		<dknob label="SATURATION" intervalLow="0" intervalHigh="100"
			divisor="100" focusableDKnob="false" id="saturation" />
		<dknob label="PHASE_SHIFT" intervalLow="-45" intervalHigh="45"
			divisor="1" type="deg" focusableDKnob="false" id="phaseShift" />
		<dknob label="OFFSET" intervalLow="10" intervalHigh="200"
			divisor="100" focusableDKnob="false" id="offset" />
		<dknob label="TINT" intervalLow="-10" intervalHigh="10" divisor="100"
			focusableDKnob="false" id="tint" />
		<dknob label="BLUR" intervalLow="50" intervalHigh="100" divisor="100"
			focusableDKnob="false" id="blur" />
		<dknob label="BLEED" intervalLow="0" intervalHigh="10" divisor="10"
			focusableDKnob="false" id="bleed" />
	</panel>
</panel>
