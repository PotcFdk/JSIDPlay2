<!-- http://www.swixml.org - Swing UI XML based -->
<!-- Collection -->
<panel layout="GridBagLayout" bundle="applet.collection.CollectionTexts">
	<checkbox label="AUTO_CONFIGURATION" id="autoConfiguration" action="doAutoConfiguration">
		<gridbagconstraints fill="GridBagConstraints.BOTH" gridx="0" gridy="0" gridwidth="2"/>
	</checkbox>
	<scrollpane border="TitledBorder(TUNE_INFO)">
		<gridbagconstraints gridx="0" gridy="1" weightx="1"
			weighty="1" fill="GridBagConstraints.BOTH" />
		<tuneinfotable initclass="applet.collection.TuneInfoTableModel"
			Focusable="false" RowSelectionAllowed="false" ColumnSelectionAllowed="false"
			CellSelectionEnabled="false" id="tuneInfoTable">
		</tuneinfotable>
	</scrollpane>
	<panel layout="GridLayout(1,1)" border="TitledBorder(COMPOSERS_PHOTO)"
		id="photograph">
		<gridbagconstraints gridx="0" gridy="2" weightx="1"
			weighty="1" fill="GridBagConstraints.BOTH" />
		<picture id="picture" />
	</panel>
	<scrollpane>
		<gridbagconstraints gridx="1" gridy="1" weightx="1"
			gridheight="2" weighty="1" fill="GridBagConstraints.BOTH" />
		<tree ExpandsSelectedPaths="true" ScrollsOnExpand="true" id="fileBrowser" />
	</scrollpane>
	<panel border="TitledBorder(SEARCH)">
		<gridbagconstraints gridx="0" gridy="3" gridwidth="2"
			fill="GridBagConstraints.BOTH" />
		<vbox>
			<panel layout="FlowLayout" constraints="FlowLayout.LEFT">
				<label text="SEARCH_FOR" />
				<combobox id="searchCriteria" action="searchCategory" />
				<textfield id="searchFor" columns="20" action="searchText"></textfield>
				<NiceButton id="startSearch" icon="applet/icons/search.png"
					ToolTipText="SEARCH_NEXT" action="doStartSearch" />
				<NiceButton id="stopSearch" icon="applet/icons/mini/stop.png"
					ToolTipText="SEARCH_STOP" Enabled="false" action="doStopSearch" />
				<NiceButton id="resetSearch" icon="applet/icons/mini/reset.png"
					ToolTipText="SEARCH_FROM_START_AGAIN" action="doResetSearch" />
				<NiceButton id="createSearchIndex" icon="applet/icons/mini/createindex.png"
					ToolTipText="RECREATE_SEARCH_DATABASE" action="doCreateSearchIndex" />
				<combobox id="searchScope" />
			</panel>
			<panel layout="FlowLayout" constraints="FlowLayout.LEFT">
				<label text="OPTIONS" />
				<label />
				<label />
				<label text="RESULT_ACTION" />
				<combobox id="searchResult" />
			</panel>
		</vbox>
	</panel>
	<panel border="TitledBorder(CONFIGURATION)">
		<gridbagconstraints gridx="0" gridy="4" gridheight="1"
			gridwidth="GridBagConstraints.REMAINDER" fill="GridBagConstraints.BOTH" />
		<vbox>
			<panel layout="FlowLayout" constraints="FlowLayout.LEFT">
				<label text="BASE_DIR"></label>
				<textfield id="collectionDir" Enabled="false" />
				<button text="BROWSE" id="browse" icon="applet/icons/browse.png"
					action="doBrowse"></button>
				<link id="linkCollectionURL" action="gotoURL"></link>
			</panel>
		</vbox>
	</panel>
</panel>