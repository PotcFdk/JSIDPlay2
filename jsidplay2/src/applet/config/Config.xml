<!-- http://www.swixml.org - Swing UI XML based -->
<!-- Configuration -->
<panel layout="BorderLayout" bundle="applet.config.ConfigTexts">
	<vbox>
		<panel>
			<vbox>
				<hbox>
					<button text="IMPORT" action="doImport" icon="applet/icons/load.png" />
					<button text="EXPORT" action="doExport" icon="applet/icons/save.png" />
				</hbox>
			</vbox>
		</panel>
		<scrollpane constraints="BorderLayout.NORTH" border="TitledBorder(CONFIGURATION)">
			<tree initclass="applet.config.ConfigModel"
				ExpandsSelectedPaths="true" ScrollsOnExpand="true" id="configTree" />
		</scrollpane>
		<panel constraints="BorderLayout.CENTER" layout="BorderLayout"
			id="parent" border="TitledBorder(EDITOR)" />
	</vbox>
</panel>