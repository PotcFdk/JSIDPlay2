<!-- http://www.swixml.org - Swing UI XML based -->
<!-- Joystick settings dialogue -->
<dialog xmlns="http://www.swixml.org/2007/Swixml" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.swixml.org/2007/Swixml http://kenchis.t15.org/jsidplay2//swixml2-schema-2.6-SNAPSHOT.xsd"
	size="600, 640" bundle="applet.joysticksettings.JoystickSettingsTexts"
	title="JOYSTICK_SETTINGS" defaultCloseOperation="JFrame.DISPOSE_ON_CLOSE"
	visible="true" iconImage="ICON">
	<panel layout="GridBagLayout">
		<checkbox label="JOYSTICK_IN_PORT_1_ENABLED" font="Georgia-BOLD-12"
			id="activateJoy1" action="doActivateJoy1">
			<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
				weightx="1.0" gridwidth="GridBagConstraints.RELATIVE" />
		</checkbox>
		<checkbox label="JOYSTICK_IN_PORT_2_ENABLED" font="Georgia-BOLD-12"
			id="activateJoy2" action="doActivateJoy2">
			<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
				weightx="1.0" gridwidth="GridBagConstraints.REMAINDER" />
		</checkbox>
		<panel border="TitledBorder(PORT_1)" layout="GridBagLayout">
			<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
				weightx="1.0" gridwidth="GridBagConstraints.RELATIVE" />
			<label text="DEVICE">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL" />
			</label>
			<combobox id="device1" action="chooseDevice1">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.REMAINDER" />
			</combobox>
			<label text="UP">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL" />
			</label>
			<combobox id="up1" action="chooseUp1">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.RELATIVE" />
			</combobox>
			<textfield id="up1Value" action="chooseUp1Value">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.REMAINDER" />
			</textfield>
			<label text="DOWN">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL" />
			</label>
			<combobox id="down1" action="chooseDown1">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.RELATIVE" />
			</combobox>
			<textfield id="down1Value" action="chooseDown1Value">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.REMAINDER" />
			</textfield>
			<label text="LEFT">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL" />
			</label>
			<combobox id="left1" action="chooseLeft1">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.RELATIVE" />
			</combobox>
			<textfield id="left1Value" action="chooseLeft1Value">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.REMAINDER" />
			</textfield>
			<label text="RIGHT">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL" />
			</label>
			<combobox id="right1" action="chooseRight1">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.RELATIVE" />
			</combobox>
			<textfield id="right1Value" action="chooseRight1Value">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.REMAINDER" />
			</textfield>
			<label text="FIRE">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL" />
			</label>
			<combobox id="fire1" action="chooseFire1">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.RELATIVE" />
			</combobox>
			<textfield id="fire1Value" action="chooseFire1Value">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.REMAINDER" />
			</textfield>
		</panel>
		<panel border="TitledBorder(PORT_2)" layout="GridBagLayout">
			<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
				weightx="1.0" gridwidth="GridBagConstraints.REMAINDER" />
			<label text="DEVICE">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL" />
			</label>
			<combobox id="device2" action="chooseDevice2">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.REMAINDER" />
			</combobox>
			<label text="UP">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL" />
			</label>
			<combobox id="up2" action="chooseUp2">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.RELATIVE" />
			</combobox>
			<textfield id="up2Value" action="chooseUp2Value">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.REMAINDER" />
			</textfield>
			<label text="DOWN">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL" />
			</label>
			<combobox id="down2" action="chooseDown2">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.RELATIVE" />
			</combobox>
			<textfield id="down2Value" action="chooseDown2Value">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.REMAINDER" />
			</textfield>
			<label text="LEFT">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL" />
			</label>
			<combobox id="left2" action="chooseLeft2">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.RELATIVE" />
			</combobox>
			<textfield id="left2Value" action="chooseLeft2Value">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.REMAINDER" />
			</textfield>
			<label text="RIGHT">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL" />
			</label>
			<combobox id="right2" action="chooseRight2">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.RELATIVE" />
			</combobox>
			<textfield id="right2Value" action="chooseRight2Value">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.REMAINDER" />
			</textfield>
			<label text="FIRE">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL" />
			</label>
			<combobox id="fire2" action="chooseFire2">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.RELATIVE" />
			</combobox>
			<textfield id="fire2Value" action="chooseFire2Value">
				<gridbagconstraints fill="GridBagConstraints.HORIZONTAL"
					weightx="1.0" gridwidth="GridBagConstraints.REMAINDER" />
			</textfield>
		</panel>
		<scrollpane constraints="BorderLayout.CENTER">
			<gridbagconstraints fill="GridBagConstraints.BOTH"
				weightx="1.0" weighty="1.0" gridwidth="GridBagConstraints.RELATIVE" />
			<table id="testTable1" initclass="applet.joysticksettings.JoystickTestModel" />
		</scrollpane>
		<scrollpane constraints="BorderLayout.CENTER">
			<gridbagconstraints fill="GridBagConstraints.BOTH"
				weightx="1.0" weighty="1.0" gridwidth="GridBagConstraints.REMAINDER" />
			<table id="testTable2" initclass="applet.joysticksettings.JoystickTestModel" />
		</scrollpane>
	</panel>
</dialog>
