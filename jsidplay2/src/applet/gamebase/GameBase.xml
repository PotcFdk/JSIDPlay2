<!-- http://www.swixml.org - Swing UI XML based -->
<!-- GameBase -->
<panel layout="GridBagLayout" bundle="applet.gamebase.GameBaseTexts">
	<label text="HINT" font="Georgia-ITALIC-12" Foreground="BLUE"
		constraints="BorderLayout.NORTH">
		<gridbagconstraints gridx="0" gridy="0" weighty="0"
			fill="GridBagConstraints.HORIZONTAL" />
	</label>
	<checkbox label="ENABLE_GAMEBASE" id="enableGameBase" action="doEnableGameBase">
		<gridbagconstraints gridx="1" gridy="0" />
	</checkbox>
	<panel layout="BorderLayout">
		<gridbagconstraints gridx="0" gridy="1" weighty="0"
			fill="GridBagConstraints.HORIZONTAL" />
		<label text="REG_EXPR_FILTER" font="Georgia-ITALIC-12"
			constraints="BorderLayout.WEST"></label>
		<textfield constraints="BorderLayout.CENTER" id="filterField"></textfield>
	</panel>
	<panel layout="BorderLayout">
		<gridbagconstraints gridx="0" gridy="2" gridheight="7"
			weightx="1" weighty="1" fill="GridBagConstraints.BOTH" />
		<scrollpane border="TitledBorder(INDEX)">
			<tabbedPane Focusable="false" id="letter" constraints="BorderLayout.CENTER" />
		</scrollpane>
	</panel>
	<panel border="TitledBorder(SCREENSHOT)" id="screenshot">
		<gridbagconstraints gridx="1" gridy="2" gridheight="1"
			fill="GridBagConstraints.BOTH" />
		<picture id="picture" />
	</panel>
	<panel border="TitledBorder(INFOS)">
		<gridbagconstraints gridx="1" gridy="3" weightx="1"
			weighty="1" fill="GridBagConstraints.BOTH" />
		<textfield id="infos" columns="40" Opaque="false" />
	</panel>
	<panel border="TitledBorder(PROGRAMMER)">
		<gridbagconstraints gridx="1" gridy="4" weightx="1"
			weighty="1" fill="GridBagConstraints.BOTH" />
		<textfield id="programmer" columns="40" Opaque="false" />
	</panel>
	<panel border="TitledBorder(CATEGORY)">
		<gridbagconstraints gridx="1" gridy="5" weightx="1"
			weighty="1" fill="GridBagConstraints.BOTH" />
		<textfield id="category" columns="40" Opaque="false" />
	</panel>
	<panel border="TitledBorder(MUSICIAN)">
		<gridbagconstraints gridx="1" gridy="6" weightx="1"
			weighty="1" fill="GridBagConstraints.BOTH" />
		<textfield id="musician" columns="40" Opaque="false" />
	</panel>
	<panel border="TitledBorder(COMMENT)">
		<gridbagconstraints gridx="1" gridy="7" weightx="1"
			weighty="1" fill="GridBagConstraints.BOTH" />
		<textarea id="comment" columns="40" Opaque="false" LineWrap="true" />
	</panel>
	<button Text="MUSIC_GET" id="linkMusic" action="gotoURL">
		<gridbagconstraints gridx="1" gridy="8" weightx="1"
			weighty="1" fill="GridBagConstraints.BOTH" />
	</button>
</panel>
