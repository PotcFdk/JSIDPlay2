<!-- http://www.swixml.org - Swing UI XML based -->
<!-- Oscilloscope -->
<panel layout="GridBagLayout" bundle="applet.oscilloscope.OscilloscopeTexts">
	<panel layout="GridLayout(2,6)" border="TitledBorder(VOICE_CONTROL)">
		<gridbagconstraints weightx="1"
			fill="GridBagConstraints.BOTH" gridwidth="GridBagConstraints.REMAINDER" />
		<label text="MONO_SID_" font="Georgia-BOLD-12" />
		<checkbox label="MUTE_VOICE_1" id="muteVoice1" action="doMuteVoice1" />
		<checkbox label="MUTE_VOICE_2" id="muteVoice2" action="doMuteVoice2" />
		<checkbox label="MUTE_VOICE_3" id="muteVoice3" action="doMuteVoice3" />
		<label text="STEREO_SID_" font="Georgia-BOLD-12" />
		<checkbox label="MUTE_VOICE_1" id="muteVoice4" action="doMuteVoice4" />
		<checkbox label="MUTE_VOICE_2" id="muteVoice5" action="doMuteVoice5" />
		<checkbox label="MUTE_VOICE_3" id="muteVoice6" action="doMuteVoice6" />
	</panel>
	<panel layout="GridLayout(1,2)">
		<gridbagconstraints weightx="1" weighty="1"
			fill="GridBagConstraints.BOTH" gridwidth="GridBagConstraints.REMAINDER" />
		<panel layout="GridLayout(4,3)" border="TitledBorder(MONO_SID)">
			<waveGauge label="WAVE" voice="0" id="waveMono_0" />
			<envelopeGauge label="ENVELOPE" voice="0" id="envMono_0" />
			<frequencyGauge label="FREQUENCY" voice="0" id="freqMono_0" />

			<waveGauge label="WAVE" voice="1" id="waveMono_1" />
			<envelopeGauge label="ENVELOPE" voice="1" id="envMono_1" />
			<frequencyGauge label="FREQUENCY" voice="1" id="freqMono_1" />

			<waveGauge label="WAVE" voice="2" id="waveMono_2" />
			<envelopeGauge label="ENVELOPE" voice="2" id="envMono_2" />
			<frequencyGauge label="FREQUENCY" voice="2" id="freqMono_2" />

			<volumeGauge label="MASTER_VOLUME" voice="0" id="volumeMono" />
			<resonanceGauge label="RESONANCE" voice="0"
				id="resonanceMono" />
			<filterGauge label="FILTER" voice="0" id="filterMono" />
		</panel>
		<panel layout="GridLayout(4,3)" border="TitledBorder(STEREO_SID)">
			<waveGauge label="WAVE" voice="0" id="waveStereo_0" />
			<envelopeGauge label="ENVELOPE" voice="0" id="envStereo_0" />
			<frequencyGauge label="FREQUENCY" voice="0" id="freqStereo_0" />

			<waveGauge label="WAVE" voice="1" id="waveStereo_1" />
			<envelopeGauge label="ENVELOPE" voice="1" id="envStereo_1" />
			<frequencyGauge label="FREQUENCY" voice="1" id="freqStereo_1" />

			<waveGauge label="WAVE" voice="2" id="waveStereo_2" />
			<envelopeGauge label="ENVELOPE" voice="2" id="envStereo_2" />
			<frequencyGauge label="FREQUENCY" voice="2" id="freqStereo_2" />

			<volumeGauge label="MASTER_VOLUME" voice="0" id="volumeStereo" />
			<resonanceGauge label="RESONANCE" voice="0"
				id="resonanceStereo" />
			<filterGauge label="FILTER" voice="0" id="filterStereo" />
		</panel>
	</panel>
</panel>