<?xml version="1.0" encoding="UTF-8"?>
<?import javafx.scene.Scene?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.ToggleButton?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.canvas.Canvas?>
<?scenebuilder-preview-i18n-resource Ultimate64.properties?>

<!-- Use fx:controller for JavaFX Preview in Eclipse e(fx)clipse -->

<Scene xmlns:fx="http://javafx.com/fxml" width="1024"
	height="1024" stylesheets="@Ultimate64.css">
	<!-- <Scene xmlns:fx="http://javafx.com/fxml" width="1024" height="768" -->
	<!-- stylesheets="@Ultimate64.css" -->
	<!-- fx:controller="ui.ultimate64.Ultimate64Window"> -->
	<AnchorPane>
		<BorderPane AnchorPane.bottomAnchor="10"
			AnchorPane.leftAnchor="10" AnchorPane.rightAnchor="10"
			AnchorPane.topAnchor="10">
			<top>
				<HBox>
					<ToggleButton focusTraversable="false"
						fx:id="audioStreaming" text="AUDIO_STREAMING"
						onAction="#enableDisableAudioStreaming">
						<tooltip>
							<Tooltip text="%AUDIO_STREAMING_TIP" />
						</tooltip>
					</ToggleButton>
					<ToggleButton focusTraversable="false"
						fx:id="videoStreaming" text="VIDEO_STREAMING"
						onAction="#enableDisableVideoStreaming">
						<tooltip>
							<Tooltip text="%VIDEO_STREAMING_TIP" />
						</tooltip>
					</ToggleButton>
				</HBox>
			</top>
			<center>
				<GridPane>
					<children>
						<TitledPane text="%VIDEO_SCREEN" collapsible="false"
							GridPane.columnIndex="0" GridPane.rowIndex="0" minWidth="768" minHeight="544">
							<Canvas fx:id="screen" scaleX="2" scaleY="2"/>
						</TitledPane>
					</children>
				</GridPane>
			</center>
		</BorderPane>
	</AnchorPane>
</Scene>