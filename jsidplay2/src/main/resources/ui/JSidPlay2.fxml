<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.Scene?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Tooltip?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.control.RadioButton?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.collections.FXCollections?> 
<?import javafx.geometry.Insets?>
<?import java.lang.Integer?>
<?import java.net.URL?>
<?import ui.common.TypeTextField?>
<?import ui.menu.MainMenu?>
<?import ui.statusbar.StatusBar?>
<?scenebuilder-preview-i18n-resource JSidPlay2.properties?>
<?scenebuilder-classpath-element ../../../../target/classes?>
<Scene>
	<stylesheets>
		<URL value="@JSidPlay2.css" />
	</stylesheets>
	<BorderPane xmlns:fx="http://javafx.com/fxml">
		<top>
			<VBox>
				<MainMenu />
				<AnchorPane>
					<HBox AnchorPane.leftAnchor="10" alignment="CENTER">
						<ComboBox onAction="#setVideoStandard" fx:id="videoStandardBox" />
						<ComboBox onAction="#setEngine" fx:id="engineBox" />
						<ComboBox onAction="#setAudio" fx:id="audioBox" maxWidth="200" />
						<ComboBox onAction="#setDevice" fx:id="devicesBox"
							maxWidth="150" />
						<ComboBox onAction="#setSampling" fx:id="samplingBox" />
						<ComboBox onAction="#setSamplingRate" fx:id="samplingRateBox" />
						<Button onAction="#showVolume" fx:id="volumeButton">
							<graphic>
								<ImageView>
									<image>
										<Image url="@/ui/icons/show_volume.png" />
									</image>
								</ImageView>
							</graphic>
						</Button>
					</HBox>
				</AnchorPane>
				<HBox>
					<HBox alignment="CENTER_LEFT" HBox.hgrow="ALWAYS">
						<spacing>10</spacing>
						<padding>
							<Insets left="10.0" right="10.0" />
						</padding>
						<Label text="%DEFAULT_LENGTH" alignment="CENTER_RIGHT" />
						<TextField fx:id="defaultTime" prefWidth="60" >
							<tooltip>
								<Tooltip text="%DEFAULT_LENGTH_TIP"></Tooltip>
							</tooltip>
						</TextField>
						<CheckBox text="%RESPECT_SONG_LENGTH" fx:id="enableSldb"
							onAction="#doEnableSldb">
						</CheckBox>
						<CheckBox text="%SINGLE_SONG" fx:id="singleSong">
						</CheckBox>
					</HBox>
					<HBox alignment="CENTER_RIGHT" HBox.hgrow="ALWAYS">
						<spacing>10</spacing>
						<padding>
							<Insets left="10.0" right="10.0" />
						</padding>
						<Label text="%HOSTNAME" fx:id="hostnameLabel" />
						<TextField fx:id="hostname" onAction="#setHostname"
							prefWidth="80" >
							<tooltip>
								<Tooltip text="%HOSTNAME_TIP"></Tooltip>
							</tooltip>
						</TextField>
						<Label text="%PORT" fx:id="portLabel" />
						<TypeTextField type="Integer" fx:id="port" onAction="#setPort"
							prefWidth="60" >
							<tooltip>
								<Tooltip text="%PORT_TIP"></Tooltip>
							</tooltip>
						</TypeTextField>
						<Label text="%6581" fx:id="hardsid6581Label" />
						<ComboBox fx:id="hardsid6581Box" onAction="#setSid6581">
							<items>
								<FXCollections fx:factory="observableArrayList">
									<!-- Put in enough devices for: 4 HardSID PCI cards + 4 HardSID 
										USB chips + 8 Network SID Devices -->
									<Integer fx:value="0" />
									<Integer fx:value="1" />
									<Integer fx:value="2" />
									<Integer fx:value="3" />
									<Integer fx:value="4" />
									<Integer fx:value="5" />
									<Integer fx:value="6" />
									<Integer fx:value="7" />
									<Integer fx:value="8" />
									<Integer fx:value="9" />
									<Integer fx:value="10" />
									<Integer fx:value="11" />
									<Integer fx:value="12" />
									<Integer fx:value="13" />
									<Integer fx:value="14" />
									<Integer fx:value="15" />
								</FXCollections>
							</items>
						</ComboBox>
						<Label text="%8580" fx:id="hardsid8580Label" />
						<ComboBox fx:id="hardsid8580Box" onAction="#setSid8580">
							<items>
								<FXCollections fx:factory="observableArrayList">
									<!-- Put in enough devices for: 4 HardSID PCI cards + 4 HardSID 
										USB chips + 8 Network SID Devices -->
									<Integer fx:value="0" />
									<Integer fx:value="1" />
									<Integer fx:value="2" />
									<Integer fx:value="3" />
									<Integer fx:value="4" />
									<Integer fx:value="5" />
									<Integer fx:value="6" />
									<Integer fx:value="7" />
									<Integer fx:value="8" />
									<Integer fx:value="9" />
									<Integer fx:value="10" />
									<Integer fx:value="11" />
									<Integer fx:value="12" />
									<Integer fx:value="13" />
									<Integer fx:value="14" />
									<Integer fx:value="15" />
								</FXCollections>
							</items>
						</ComboBox>
						<HBox>
							<VBox>
								<RadioButton text="%EMU" fx:id="playEmulation"
									toggleGroup="$playSourceGroup" />
								<RadioButton text="%RECORDING" fx:id="playMP3"
									toggleGroup="$playSourceGroup" />
							</VBox>
						</HBox>
						<Button fx:id="mp3Browse" onAction="#doBrowse">
							<graphic>
								<ImageView>
									<image>
										<Image url="@/ui/icons/browse.png" />
									</image>
								</ImageView>
							</graphic>
						</Button>
					</HBox>
				</HBox>
			</VBox>
		</top>
		<center>
			<TabPane focusTraversable="false" fx:id="tabbedPane"
				tabClosingPolicy="ALL_TABS" />
		</center>
		<bottom>
			<StatusBar />
		</bottom>
	</BorderPane>
</Scene>

